<Page
    x:Class="Cactus_Reader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cactus_Reader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Grid>
        <Border x:Name="appTitleBar" IsHitTestVisible="True" VerticalAlignment="Top"
                Background="Transparent" Height="32">
            <StackPanel Orientation="Horizontal" Margin="12, 0, 0, 0">
                <Image x:Name="appFontIcon" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Source="/Assets/Square44x44Logo.png" Width="16" Height="16"/>
                <TextBlock x:Name="appTitle" Text="Cactus Reader" VerticalAlignment="Center"
                           Margin="12, 0, 0, 0" Style="{StaticResource CaptionTextBlockStyle}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
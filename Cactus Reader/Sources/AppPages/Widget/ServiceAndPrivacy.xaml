<Page
    x:Class="Cactus_Reader.Sources.AppPages.ServiceAndPrivacy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="8">
        <Pivot>

            <PivotItem Header="Cactus Reader 服务条款">
                <RichEditBox x:Name="ServiceTips" Margin="0, 12, 0, 12" IsReadOnly="True"
                             Padding="12" FontFamily="宋体"/>
            </PivotItem>

            <PivotItem Header="Cactus Reader 隐私协议">
                <RichEditBox x:Name="PrivacyTips" Margin="0, 12, 0, 12" IsReadOnly="True"
                             Padding="12" FontFamily="宋体"/>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

<Page
    x:Class="Cactus_Reader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.Resources>
        <Thickness x:Key="NavigationViewHeaderMargin">0, 0, 0, 0</Thickness>
        <Thickness x:Key="NavigationViewContentMargin">0, 48, 0, 0</Thickness>
        <FontFamily x:Key="SegoeFluentIcons">/Sources/Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons</FontFamily>
    </Page.Resources>
    
    <Grid>
        <Frame x:ConnectionId='2' x:Name="mainContent">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>
            <Grid>
                <Border x:ConnectionId='3' x:Name="appTitleBar" IsHitTestVisible="True" VerticalAlignment="Top" Background="Transparent"
                        Height="40" Canvas.ZIndex="1" Margin="48, 8, 0, 0">
                    <StackPanel Orientation="Horizontal">
                        <Image x:ConnectionId='7' x:Name="appFontIcon" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Source="/Assets/Square44x44Logo.scale-100.png" Width="20" Height="20"/>
                        <TextBlock x:ConnectionId='8' x:Name="appTitle" Text="Cactus Reader" VerticalAlignment="Center"
                                   Margin="8, 0, 0, 0" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </StackPanel>
                </Border>
                <muxc:NavigationView x:ConnectionId='4' x:Name="navViewControl" IsTitleBarAutoPaddingEnabled="False"
                                     IsBackEnabled="True" Canvas.ZIndex="0" IsBackButtonVisible="Visible"
                                     CompactModeThresholdWidth="0" OpenPaneLength="240"
                                                                                                          
                                                                                >
                    <muxc:NavigationView.AutoSuggestBox>
                        <AutoSuggestBox x:ConnectionId='5' QueryIcon="Find" PlaceholderText="搜索设置、文档" Height="36"
                                                                                VerticalContentAlignment="Center"
                                                                                         
                                                                                      />
                    </muxc:NavigationView.AutoSuggestBox>
                    <muxc:NavigationView.MenuItems>
                        <muxc:NavigationViewItem Tag="library" Content="资源库" Height="48">
                            <muxc:NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE80F;"/>
                            </muxc:NavigationViewItem.Icon>
                        </muxc:NavigationViewItem>
                        <muxc:NavigationViewItem Tag="favorite" Content="收藏夹" Height="48">
                            <muxc:NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE728;"/>
                            </muxc:NavigationViewItem.Icon>
                        </muxc:NavigationViewItem>
                        <muxc:NavigationViewItem Tag="notes" Content="便签本" Height="48">
                            <muxc:NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE70B;"/>
                            </muxc:NavigationViewItem.Icon>
                        </muxc:NavigationViewItem>
                        <muxc:NavigationViewItem Tag="plugins" Content="扩展包" Height="48">
                            <muxc:NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE74c;"/>
                            </muxc:NavigationViewItem.Icon>
                        </muxc:NavigationViewItem>
                        <muxc:NavigationViewItem Tag="recycle" Content="回收站" Height="48">
                            <muxc:NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE74D;"/>
                            </muxc:NavigationViewItem.Icon>
                        </muxc:NavigationViewItem>
                    </muxc:NavigationView.MenuItems>
                    <muxc:NavigationView.FooterMenuItems>
                        <muxc:NavigationViewItem Tag="about" Content="关于应用" Height="48">
                            <muxc:NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" Glyph="&#xE946;"/>
                            </muxc:NavigationViewItem.Icon>
                        </muxc:NavigationViewItem>
                    </muxc:NavigationView.FooterMenuItems>
                    <Grid>
                        <Frame x:ConnectionId='6' x:Name="contentFrame">
                        </Frame>
                    </Grid>
                </muxc:NavigationView>
            </Grid>
        </Frame>
    </Grid>
</Page>


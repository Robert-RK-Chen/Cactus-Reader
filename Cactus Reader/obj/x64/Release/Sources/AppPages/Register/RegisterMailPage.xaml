<Page
    x:Class="Cactus_Reader.Sources.AppPages.Register.RegisterMailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.Resources>
        <FontFamily x:Key="SegoeFluentIcons">/Sources/Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons</FontFamily>
    </Page.Resources>

    <Grid>
        <Frame x:ConnectionId='2' x:Name="contentFrame">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>

            <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                    VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="8" BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel Orientation="Vertical" Margin="48">
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontSize="40" FontWeight="Bold" Text="创建 Cactus 帐户"/>
                        <StackPanel Orientation="Horizontal" Margin="0, 12, 0, 0">
                            <HyperlinkButton x:ConnectionId='8' Padding="0" Margin="0, 3, 0, 0"                     >
                                <FontIcon FontFamily="{StaticResource SegoeFluentIcons}" FontSize="16" Glyph="&#xE760;"/>
                            </HyperlinkButton>
                            <TextBlock FontSize="16" Margin="8, 0, 0, 0" Text="一个帐户即可访问与同步你的阅读资源"/>
                        </StackPanel>

                        <TextBlock FontSize="16" Margin="0, 32, 0, 0" Text="电子邮箱："/>
                        <TextBox x:ConnectionId='3' x:Name="userMailInput" FontSize="16" Margin="0, 8, 0, 0" Height="40" Width="436" 
                                 MaxLength="255" VerticalContentAlignment="Center"                         />
                        <TextBlock x:ConnectionId='4' x:Name="alertMsg" FontSize="16" Margin="0, 16, 0, 0" TextWrapping="Wrap"
                                   Text="请输入一个有效的电子邮件地址。" MaxWidth="436" Foreground="#E00000"
                                   Visibility="Collapsed"/>
                        <CheckBox x:ConnectionId='5' Margin="0, 20, 0, 0"                                                              >
                            <StackPanel Orientation="Horizontal" Margin="0, -2, 0, 0">
                                <TextBlock Text="我已阅读并同意" VerticalAlignment="Center" FontSize="16"/>
                                <HyperlinkButton x:ConnectionId='7' Padding="0" Content="服务条款及隐私政策" VerticalAlignment="Bottom"
                                                 FontSize="16"                          />
                            </StackPanel>
                        </CheckBox>
                        <Button x:ConnectionId='6' x:Name="continueButton" FontSize="16" FontWeight="Bold" Width="436" Height="48"
                                Background="#005FB8" HorizontalAlignment="Center" Content="下 一 步"
                                CharacterSpacing="50" Margin="0, 32, 0, 0"                      
                                Style="{StaticResource AccentButtonStyle}" Foreground="White" IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Frame>
    </Grid>
</Page>

